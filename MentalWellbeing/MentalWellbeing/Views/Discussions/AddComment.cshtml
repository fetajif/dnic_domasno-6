@model MentalWellbeing.Models.AddCommentDto

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    @{ 
        var item = Model.Discussion;
    }
    <h2>@item.Name</h2>
    <div>@item.Content</div>
    <br />
    @if (item.Comments != null)
    {
        <ul>
            @foreach (var comment in item.Comments)
            {
                <li>
                    <p>@comment.Coment</p>
                </li>
            }
        </ul>
    }
    else
    {
        <p>No comments yet ...</p>
        <br /><br /><br />
    }
    <br /><br />
          <div>
              <br /><br /><br />
              <form asp-action="AddComment" method="post">
                  <br />
                  @Html.HiddenFor(model => model.CommentId)
                  <input type="hidden" asp-for="Comment.Id" />
                  <div class="form-group">
                      <label asp-for="Comment.Coment" class="control-label"></label>
                      <input asp-for="Comment.Coment" class="form-control" />
                  </div>
                  <input type="submit" value="Додади Коментар" class="btn btn-primary" />
              </form>
          </div>
</div>
<br /><br />
<div>
    <a class="btn btn-primary" asp-action="Index">Назад</a>
</div>